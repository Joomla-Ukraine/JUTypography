<?xml version="1.0" ?>
<updates>
    <update>
        <name>JUTypography</name>
        <description><![CDATA[JUTypography - Content plugin for typography article after save<br />Update to JUTypography @version@ now!<br /><span style="font-size: 85%;">@year@ &copy; Joomla! Ukraine. All rights reserved!</span>]]></description>
        <element>jutypography</element>
        <type>plugin</type>
        <version>@version@</version>
        <client>site</client>
        <folder>content</folder>
        <infourl title="Joomla! Ukraine">https://github.com/Joomla-Ukraine/JUTypography</infourl>
        <downloads>
            <downloadurl type="full"
                         format="zip">https://github.com/Joomla-Ukraine/JUTypography/releases/download/@version@/plg_content_jutypography_v@version@.zip</downloadurl>
        </downloads>
        <tags>
            <tag>stable</tag>
        </tags>
        <maintainer>Denys Nosov</maintainer>
        <maintainerurl>https://joomla-ua.org</maintainerurl>
        <targetplatform name="joomla"
                        version="4\.*|5\.*" />
        <php_minimum>8.1</php_minimum>
        <sha256>@cheksum@</sha256>
    </update>
</updates>