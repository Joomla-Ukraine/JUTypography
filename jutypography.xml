<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin"
           group="content"
           method="upgrade">
    <name>JUTypography</name>
    <creationDate>@date@</creationDate>
    <copyright>(C) @year@ Denys Nosov, Joomla! Ukraine</copyright>
    <license>GNU General Public License version 3 or later</license>
    <author>Denys Nosov, Joomla! Ukraine</author>
    <authorEmail>denys@joomla-ua.org</authorEmail>
    <authorUrl>https://joomla-ua.org</authorUrl>
    <version>@version@</version>
    <description>PLG_CONTENT_JUTYPOGRAPHY_DESCRIPTION</description>
    <namespace path="src">JU\Plugin\Content\JUTypography</namespace>

    <update>https://raw.githubusercontent.com/Joomla-Ukraine/JUTypography/refs/heads/main/update.xml</update>
    <updateservers>
        <server type="extension"
                priority="1"
                name="JUTypography">https://raw.githubusercontent.com/Joomla-Ukraine/JUTypography/refs/heads/main/update.xml</server>
    </updateservers>

    <languages folder="language">
		<language tag="en-GB">en-GB/plg_content_jutypography.ini</language>
		<language tag="en-GB">en-GB/plg_content_jutypography.sys.ini</language>
	</languages>

    <files>
        <folder plugin="jutypography">services</folder>
        <folder>src</folder>
    </files>
</extension>